<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <com.braintrainer.app.ui.views.ClashTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="32dp"/>

        <com.braintrainer.app.ui.views.ClashTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_language"
            android:textColor="#BBDEFB"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">
            
            <com.braintrainer.app.ui.views.ClashRadioButton
                android:id="@+id/rbPt"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="ðŸ‡§ðŸ‡·"
                android:textSize="32sp"
                android:background="@drawable/selector_language_blue"
                android:backgroundTint="@null"
                android:gravity="center"
                android:layout_margin="8dp"/>
                
            <com.braintrainer.app.ui.views.ClashRadioButton
                android:id="@+id/rbEn"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="ðŸ‡ºðŸ‡¸"
                android:textSize="32sp"
                android:background="@drawable/selector_language_blue"
                android:backgroundTint="@null"
                android:gravity="center"
                android:layout_margin="8dp"/>
                
            <com.braintrainer.app.ui.views.ClashRadioButton
                android:id="@+id/rbFr"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="ðŸ‡«ðŸ‡·"
                android:textSize="32sp"
                android:background="@drawable/selector_language_blue"
                android:backgroundTint="@null"
                android:gravity="center"
                android:layout_margin="8dp"/>

            <com.braintrainer.app.ui.views.ClashRadioButton
                android:id="@+id/rbEs"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="ðŸ‡ªðŸ‡¸"
                android:textSize="32sp"
                android:background="@drawable/selector_language_blue"
                android:backgroundTint="@null"
                android:gravity="center"
                android:layout_margin="8dp"/>
        </RadioGroup>

        <com.braintrainer.app.ui.views.ClashTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_music"
            android:textColor="#BBDEFB"/>
            
        <SeekBar
            android:id="@+id/seekMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/clash_seekbar_track"
            android:thumb="@drawable/clash_seekbar_thumb"
            android:minHeight="24dp"
            android:thumbOffset="8dp"
            android:splitTrack="false"
            android:layout_marginBottom="16dp"/>

        <com.braintrainer.app.ui.views.ClashTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_sfx"
            android:textColor="#BBDEFB"/>
            
        <SeekBar
            android:id="@+id/seekSfx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="100"
            android:progressDrawable="@drawable/clash_seekbar_track"
            android:thumb="@drawable/clash_seekbar_thumb"
            android:minHeight="24dp"
            android:thumbOffset="8dp"
            android:splitTrack="false"
            android:layout_marginBottom="40dp"/>

        <!-- Arrow to indicate swipe right back to history/home -->
        <com.braintrainer.app.ui.views.ClashTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_back_hint"
            android:textColor="#80FFFFFF"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"/>

        <com.braintrainer.app.ui.views.ClashButton
            android:id="@+id/btnAbout"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_clash_button_purple"
            android:backgroundTint="@null"
            android:text="@string/settings_about"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp" />

        <com.braintrainer.app.ui.views.ClashButton
            android:id="@+id/btnLogout"
            android:layout_width="200dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_clash_button_purple"
            android:backgroundTint="@null"
            android:text="@string/settings_logout"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>

