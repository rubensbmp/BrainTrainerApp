<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_clash_button_white"
    android:backgroundTint="@null"
    android:paddingStart="24dp"
    android:paddingEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/ivGameIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/infoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvGrade"
        app:layout_constraintStart_toEndOf="@+id/ivGameIcon"
        app:layout_constraintTop_toTopOf="parent">

        <com.braintrainer.app.ui.views.ClashTextView
            android:id="@+id/tvGameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ¡lculo Simples"
            android:textStyle="bold"
            android:textSize="17sp" />

        <com.braintrainer.app.ui.views.ClashTextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/02/2026 - 12:30"
            android:textSize="11sp" />
    </LinearLayout>

    <com.braintrainer.app.ui.views.ClashTextView
        android:id="@+id/tvGrade"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:background="@drawable/bg_clash_button_yellow_small"
        android:backgroundTint="@null"
        android:text="A+"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

