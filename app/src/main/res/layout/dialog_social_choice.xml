<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clash_dialog_white"
    android:backgroundTint="@null"
    android:orientation="vertical"
    android:paddingStart="24dp"
    android:paddingEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="24dp">

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/social_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/clash_text_dark"
        android:layout_marginBottom="24dp"/>

    <com.braintrainer.app.ui.views.ClashButton
        android:id="@+id/btnCreateOption"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/social_create_group"
        android:background="@drawable/bg_clash_button_yellow_clash"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"/>

    <com.braintrainer.app.ui.views.ClashButton
        android:id="@+id/btnJoinOption"
        android:layout_width="220dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/social_join_group"
        android:background="@drawable/bg_clash_button_yellow_clash"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

</LinearLayout>
