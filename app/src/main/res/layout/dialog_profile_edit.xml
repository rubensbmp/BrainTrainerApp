<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clash_panel"
    android:orientation="vertical"
    android:padding="24dp">

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="EDITAR PERFIL"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seu Nome"
        android:textColorHint="#BBBBBB"
        app:hintTextColor="#FFFFFF"
        app:boxStrokeColor="#FFFFFF"
        app:boxStrokeWidth="2dp"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.braintrainer.app.ui.views.ClashEditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:background="@null"
            android:textColor="#FFFFFF" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escolha seu Avatar"
        android:textColor="#555555"
        android:layout_marginBottom="12dp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/avatarsContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="16dp">
            <!-- Avatars injected dynamically or simplified here -->
            <ImageView
                android:id="@+id/av1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_1"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="1"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_2"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="2"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_3"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="3"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_4"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="4"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_5"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="5"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av6"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_6"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="6"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av7"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_7"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="7"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av8"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_8"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="8"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av9"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_9"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="9"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av10"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_10"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="10"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av11"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_11"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="11"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av12"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_12"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="12"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av13"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_13"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="13"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av14"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_14"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="14"
                android:layout_marginEnd="16dp"/>
            <ImageView
                android:id="@+id/av15"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/avatar_15"
                android:background="?attr/selectableItemBackground"
                android:padding="4dp"
                android:tag="15"/>
        </LinearLayout>
    </HorizontalScrollView>

    <com.braintrainer.app.ui.views.ClashButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SALVAR"
        android:background="@drawable/bg_clash_button_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

</LinearLayout>

