<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">

    <com.braintrainer.app.ui.views.ClashTextView
        android:id="@+id/tvRank"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/clash_text_dark"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ivMedal"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginHorizontal="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_medal_1"/>

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/ivUserPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_brain_up"/>
    </androidx.cardview.widget.CardView>

    <com.braintrainer.app.ui.views.ClashTextView
        android:id="@+id/tvUserName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="12dp"
        android:text="Nome do UsuÃ¡rio"
        android:textSize="16sp"
        android:textColor="@color/clash_text_dark"
        android:ellipsize="end"
        android:maxLines="1"/>

    <com.braintrainer.app.ui.views.ClashTextView
        android:id="@+id/tvUserBrainAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Melhor idade: 25 anos"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/clash_blue_dark"/>

</LinearLayout>
