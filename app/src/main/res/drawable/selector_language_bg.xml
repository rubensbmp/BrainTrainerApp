<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#40FFFFFF"/> <!-- Light highlight when selected -->
            <stroke android:width="2dp" android:color="@color/clash_yellow_main"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000"/> <!-- Subtle dark background -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
