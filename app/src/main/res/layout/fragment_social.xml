<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Not Logged In State -->
        <LinearLayout
            android:id="@+id/llLoginPrompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_brain_up"
                android:layout_marginBottom="24dp"/>

            <com.braintrainer.app.ui.views.ClashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_login_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_marginBottom="16dp"/>

            <com.braintrainer.app.ui.views.ClashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_login_desc"
                android:textSize="16sp"
                android:textColor="#BBDEFB"
                android:textAlignment="center"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="32dp"/>

            <com.google.android.gms.common.SignInButton
                android:id="@+id/btnGoogleSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Logged In State -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/clLoggedSocial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Header Icon -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_groups_header"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"/>

                <!-- Groups Chips/List -->
                <com.braintrainer.app.ui.views.ClashTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/social_my_groups"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvGroups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_group_chip"
                    android:layout_marginBottom="16dp"/>

                <!-- Ranking Area -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#F0F4F8">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.braintrainer.app.ui.views.ClashTextView
                            android:id="@+id/tvRankingTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/clash_blue_dark"
                            android:padding="12dp"
                            android:text="@string/social_ranking_title"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvRanking"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            tools:listitem="@layout/item_ranking_user"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.braintrainer.app.ui.views.ClashButton
                android:id="@+id/fabAddGroup"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="16dp"
                android:background="@drawable/bg_clash_button_yellow_small"
                android:backgroundTint="@null"
                android:text="+"
                android:textSize="32sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>

</FrameLayout>
