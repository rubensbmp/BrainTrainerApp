<?xml version="1.0" encoding="utf-8"?>
    
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MultiplicationSelectionActivity">

    <com.braintrainer.app.ui.views.ClashBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <com.braintrainer.app.ui.views.ClashTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_multiplication_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- Table Selection -->
            <com.braintrainer.app.ui.views.ClashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_multiplication_table"
                android:id="@+id/tvTableLabel"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <SeekBar
                android:id="@+id/sbTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="14" 
                android:progress="6"
                android:progressDrawable="@drawable/clash_seekbar_track"
                android:thumb="@drawable/clash_seekbar_thumb"
                android:minHeight="24dp"
                android:thumbOffset="8dp"
                android:splitTrack="false"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="8dp"/>

            <!-- Rounds Selection -->
            <com.braintrainer.app.ui.views.ClashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_multiplication_rounds"
                android:id="@+id/tvRoundsLabel"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>

            <SeekBar
                android:id="@+id/sbRounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="40" 
                android:progress="0"
                android:progressDrawable="@drawable/clash_seekbar_track"
                android:thumb="@drawable/clash_seekbar_thumb"
                android:minHeight="24dp"
                android:thumbOffset="8dp"
                android:splitTrack="false"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="8dp"/>

            <com.braintrainer.app.ui.views.ClashButton
                android:id="@+id/btnStart"
                android:layout_width="200dp"
                android:layout_height="68dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_clash_button_purple"
                android:backgroundTint="@null"
                android:text="@string/intro_start_btn"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
