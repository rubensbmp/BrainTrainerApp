<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_clash_dialog_white"
    android:backgroundTint="@null"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <com.braintrainer.app.ui.views.ClashTextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/clash_text_dark"
        android:layout_marginBottom="16dp"/>

    <com.braintrainer.app.ui.views.ClashTextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mensagem explicativa aqui."
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/clash_text_dark"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp"/>

    <com.braintrainer.app.ui.views.ClashButton
        android:id="@+id/btnPositive"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="OK"
        android:background="@drawable/bg_clash_button_yellow_clash"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <com.braintrainer.app.ui.views.ClashButton
        android:id="@+id/btnNegative"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Cancelar"
        android:background="@drawable/bg_clash_button_purple"
        android:backgroundTint="@null"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:visibility="gone"/>

</LinearLayout>
