<?xml version="1.0" encoding="utf-8"?>
    
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DifficultySelectionActivity">

    <com.braintrainer.app.ui.views.ClashBackgroundView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">

            <com.braintrainer.app.ui.views.ClashTextView
                android:id="@+id/tvGameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOME DO JOGO"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Progress Options (Shared) -->
            <com.braintrainer.app.ui.views.ClashTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diff_rounds_label"
                android:id="@+id/tvRoundsLabel"
                android:textSize="14sp"
                android:layout_marginTop="8dp"/>

            <SeekBar
                android:id="@+id/sbRounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="15" 
                android:progress="5"
                android:progressDrawable="@drawable/clash_seekbar_track"
                android:thumb="@drawable/clash_seekbar_thumb"
                android:minHeight="24dp"
                android:thumbOffset="8dp"
                android:splitTrack="false"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/containerFlashTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">
                
                <com.braintrainer.app.ui.views.ClashTextView
                    android:id="@+id/tvFlashLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/diff_flash_label"
                    android:textSize="14sp"/>

                <SeekBar
                    android:id="@+id/sbFlashTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="9" 
                    android:progress="9"
                    android:progressDrawable="@drawable/clash_seekbar_track"
                    android:thumb="@drawable/clash_seekbar_thumb"
                    android:minHeight="24dp"
                    android:thumbOffset="8dp"
                    android:splitTrack="false"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>

            <!-- Standard Difficulty Buttons -->
            <LinearLayout
                android:id="@+id/containerDifficulty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <com.braintrainer.app.ui.views.ClashButton
                    android:id="@+id/btnEasy"
                    android:layout_width="200dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_clash_button_purple"
                    android:backgroundTint="@null"
                    android:text="@string/diff_easy"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <com.braintrainer.app.ui.views.ClashButton
                    android:id="@+id/btnMedium"
                    android:layout_width="200dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_clash_button_purple"
                    android:backgroundTint="@null"
                    android:text="@string/diff_medium"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <com.braintrainer.app.ui.views.ClashButton
                    android:id="@+id/btnHard"
                    android:layout_width="200dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_clash_button_purple"
                    android:backgroundTint="@null"
                    android:text="@string/diff_hard"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Regional Selection Area (Flags/Maps) -->
            <LinearLayout
                android:id="@+id/containerRegions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <com.braintrainer.app.ui.views.ClashTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Escolha a Dificuldade"
                    android:textSize="13sp"
                    android:layout_marginBottom="8dp"/>

                <RadioGroup
                    android:id="@+id/rgDifficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">
                    <RadioButton android:id="@+id/rbEasy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fácil" android:layout_marginEnd="12dp"/>
                    <RadioButton android:id="@+id/rbMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Médio" android:checked="true" android:layout_marginEnd="12dp"/>
                    <RadioButton android:id="@+id/rbHard" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Difícil"/>
                </RadioGroup>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:paddingHorizontal="4dp">

                    <com.braintrainer.app.ui.views.ClashButton
                        android:id="@+id/btnWorld"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_clash_button_purple"
                        android:backgroundTint="@null"
                        android:text="MUNDO"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                    
                    <com.braintrainer.app.ui.views.ClashButton
                        android:id="@+id/btnAmericas"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_clash_button_purple"
                        android:backgroundTint="@null"
                        android:text="AMÉRICAS"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <com.braintrainer.app.ui.views.ClashButton
                        android:id="@+id/btnEurope"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_clash_button_purple"
                        android:backgroundTint="@null"
                        android:text="EUROPA"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <com.braintrainer.app.ui.views.ClashButton
                        android:id="@+id/btnAsia"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_clash_button_purple"
                        android:backgroundTint="@null"
                        android:text="ÁSIA"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <com.braintrainer.app.ui.views.ClashButton
                        android:id="@+id/btnAfrica"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_clash_button_purple"
                        android:backgroundTint="@null"
                        android:text="ÁFRICA"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <com.braintrainer.app.ui.views.ClashButton
                        android:id="@+id/btnOceania"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="4dp"
                        android:background="@drawable/bg_clash_button_purple"
                        android:backgroundTint="@null"
                        android:text="OCEANIA"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
                </GridLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
