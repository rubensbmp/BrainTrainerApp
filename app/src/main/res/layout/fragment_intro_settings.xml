<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    
    android:padding="32dp">

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="32dp"/>

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_lang"
        android:textColor="#BBDEFB"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">
        
        <RadioButton
            android:id="@+id/rbPt"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="ðŸ‡§ðŸ‡·"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:background="@drawable/selector_language_blue"
            android:button="@null"
            android:gravity="center"
            android:layout_margin="8dp"
            android:checked="true"/>
            
        <RadioButton
            android:id="@+id/rbEn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="ðŸ‡ºðŸ‡¸"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:background="@drawable/selector_language_blue"
            android:button="@null"
            android:gravity="center"
            android:layout_margin="8dp"/>
            
        <RadioButton
            android:id="@+id/rbFr"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="ðŸ‡«ðŸ‡·"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:background="@drawable/selector_language_blue"
            android:button="@null"
            android:gravity="center"
            android:layout_margin="8dp"/>

        <RadioButton
            android:id="@+id/rbEs"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:text="ðŸ‡ªðŸ‡¸"
            android:textSize="32sp"
            android:textColor="#FFF"
            android:background="@drawable/selector_language_blue"
            android:button="@null"
            android:gravity="center"
            android:layout_margin="8dp"/>
    </RadioGroup>

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_music"
        android:textColor="#BBDEFB"/>
        
    <SeekBar
        android:id="@+id/seekMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_marginBottom="16dp"/>

    <com.braintrainer.app.ui.views.ClashTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_sfx"
        android:textColor="#BBDEFB"/>
        
    <SeekBar
        android:id="@+id/seekSfx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="100"
        android:layout_marginBottom="40dp"/>

    <com.braintrainer.app.ui.views.ClashButton
        android:id="@+id/btnEnterApp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_clash_button_yellow"
        android:text="@string/intro_start_btn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

</LinearLayout>


