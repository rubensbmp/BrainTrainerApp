<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <com.braintrainer.app.ui.views.ClashTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stats_header_recent"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <com.braintrainer.app.ui.views.ClashButton
                android:id="@+id/btnClearHistory"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_clash_button_purple"
                android:backgroundTint="@null"
                android:text="@string/stats_clear_btn"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Stats Grid Summary -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:layout_marginBottom="24dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/clash_bg_blue_dark">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">
                    <com.braintrainer.app.ui.views.ClashTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_total_games"
                        android:textSize="12sp"
                        android:textColor="#BBDEFB"/>
                    <com.braintrainer.app.ui.views.ClashTextView
                        android:id="@+id/tvTotalGames"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/clash_bg_blue_dark">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:gravity="center">
                    <com.braintrainer.app.ui.views.ClashTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stats_avg_age"
                        android:textSize="12sp"
                        android:textColor="#BBDEFB"/>
                    <com.braintrainer.app.ui.views.ClashTextView
                        android:id="@+id/tvAvgAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <!-- Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <com.braintrainer.app.ui.views.ClashTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/stats_evolution_title"
                    android:textColor="@color/clash_text_dark"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"/>

                <com.braintrainer.app.ui.stats.LineChartView
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Recent History List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStats"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            tools:listitem="@layout/item_stat_history"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <!-- Hint to go back -->
        <com.braintrainer.app.ui.views.ClashTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="PRATICAR &gt;"
            android:textColor="#80FFFFFF"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </LinearLayout>
</FrameLayout>

